<?xml version="1.0" encoding="UTF-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout tools:context=".MainActivity" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout android:layout_height="match_parent" android:layout_width="match_parent" android:orientation="vertical">


    <LinearLayout android:layout_height="100dp" android:layout_width="match_parent" android:background="#007B38">

    <TextView android:layout_height="match_parent" android:layout_width="match_parent" android:gravity="center" android:textColor="#FFFF00" android:textSize="40dp" android:textStyle="bold" android:text="Giải phương trình bậc 1"> </TextView>

</LinearLayout>


    <LinearLayout android:layout_height="150dp" android:layout_width="match_parent" android:orientation="horizontal">

    <TextView android:layout_height="100dp" android:layout_width="150dp" android:background="#CCCCCC" android:textSize="40dp" android:textStyle="bold" android:text="Nhập a:" android:layout_marginTop="20dp" android:paddingTop="20dp"> </TextView>

    <EditText android:layout_height="100dp" android:layout_width="400dp" android:textSize="40dp" android:layout_marginTop="20dp" android:layout_marginLeft="10dp" android:id="@+id/txta"> </EditText>

</LinearLayout>


    <LinearLayout android:layout_height="150dp" android:layout_width="match_parent" android:orientation="horizontal">

    <TextView android:layout_height="100dp" android:layout_width="150dp" android:background="#CCCCCC" android:textSize="40dp" android:textStyle="bold" android:text="Nhập b:" android:layout_marginTop="20dp" android:paddingTop="20dp"> </TextView>

    <EditText android:layout_height="100dp" android:layout_width="400dp" android:textSize="40dp" android:layout_marginTop="20dp" android:layout_marginLeft="10dp" android:id="@+id/txtb"> </EditText>

</LinearLayout>


    <LinearLayout android:layout_height="150dp" android:layout_width="match_parent">

    <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="60dp" android:text="Kết quả" android:layout_marginLeft="160dp" android:id="@+id/button1" android:layout_gravity="center"> </Button>

</LinearLayout>

</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>